{
  "private": true,
  "name": "arduino-pro-ide",
  "version": "0.0.6",
  "license": "MIT",
  "main": "scripts/arduino-pro-ide-electron-main.js",
  "dependencies": {
    "@theia/core": "next",
    "@theia/cpp": "next",
    "@theia/debug": "next",
    "@theia/editor": "next",
    "@theia/electron": "next",
    "@theia/file-search": "next",
    "@theia/filesystem": "next",
    "@theia/languages": "next",
    "@theia/messages": "next",
    "@theia/monaco": "next",
    "@theia/navigator": "next",
    "@theia/plugin-ext": "next",
    "@theia/plugin-ext-vscode": "next",
    "@theia/preferences": "next",
    "@theia/process": "next",
    "@theia/terminal": "next",
    "@theia/workspace": "next",
    "arduino-ide-extension": "file:../working-copy/arduino-ide-extension",
    "arduino-debugger-extension": "file:../working-copy/arduino-debugger-extension"
  },
  "theia": {
    "target": "electron",
    "frontend": {
      "config": {
        "applicationName": "Arduino Pro IDE",
        "defaultTheme": "arduino-theme",
        "preferences": {
          "editor.autoSave": "on"
        },
        "disallowReloadKeybinding": true
      }
    },
    "generator": {
      "config": {
        "preloadTemplate": "<div class='theia-preload' style='background-color: rgb(237, 241, 242);'></div>"
      }
    }
  },
  "description": "Arduino Pro IDE",
  "author": "Arduino SA",
  "resolutions": {
    "**/fs-extra": "^4.0.3"
  },
  "engines": {
    "node": ">=10.11.0 <12"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/arduino/arduino-pro-ide.git"
  },
  "// Notes:": [
    "The resolution for `fs-extra` was required due to this: https://spectrum.chat/theia/general/our-theia-electron-builder-app-no-longer-starts~f5cf09a0-6d88-448b-8818-24ad0ec2ee7c"
  ],
  "theiaPluginsDir": "plugins",
  "theiaPlugins": {
    "vscode-yaml": "https://github.com/redhat-developer/vscode-yaml/releases/download/0.7.2/redhat.vscode-yaml-0.7.2.vsix"
  }
}